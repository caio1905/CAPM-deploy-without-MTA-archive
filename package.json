{
    "name": "hanaservice",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/audit-logging": "^5.0.0",
        "@sap/cds": "^5",
        "@sap/cds-odata-v2-adapter-proxy": "^1.7.9",
        "@sap/hana-client": "^2.9.28",
        "@sap/xsenv": "^3.1.1",
        "@sap/xssec": "^3.2.2",
        "express": "^4",
        "passport": "^0.4.1"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.1.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "hana": "cds deploy --to hana:hanaservice-db --auto-undeploy",
        "start": "cds run",
        "build": "cds build"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            },
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                }
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    }
}
